@{
    ViewBag.Title = "Sign Up";
}


    <div class="card col-auto" style="width: 40em">
        <div class="container p-3">
            <form>
                <div class="row p-2">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="First Name" />
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Last Name" />
                    </div>
                </div>

                <div class="row p-2">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="E-Mail" />
                    </div>
                </div>

                <div class="row p-2">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Username" />
                    </div>
                </div>

                <div class="row p-2">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Password" />
                    </div>
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Confirm Password" />
                    </div>
                </div>

                <div class="row p-2">
                    <div class="col">
                        <input type="text" class="form-control" placeholder="Address" />
                    </div>
                </div>

                <div class="row p-3">
                    <div class="col">
                        <input class="btn btn-primary btn-block" value="Register" type="submit" />
                    </div>

                    <div class="col">
                        <input class="btn btn-secondary btn-block" value="Cancel" type="reset" />
                    </div>
                </div>

                <div class="row p-3">
                    <div class="col">
                        <button class="btn btn-outline-secondary btn-block">
                            <a asp-action="login" asp-controller="user">Already have an account?</a>
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>