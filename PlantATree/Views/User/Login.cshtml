@model UserAccount
@{
    ViewBag.Title = "Login";
}


<div class="card col-auto mt-2" style="width: 40em">
    <div class="container p-3">
        <form asp-controller="User" asp-action="Login" method="post">
            <div class="row p-2">
                <div class="col">
                    <input asp-for="Username" class="form-control" placeholder="Username" />
                </div>
            </div>

            <div class="row p-2">
                <div class="col">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                </div>
            </div>

            <div class="row p-3">
                <div class="col">
                    <input class="btn btn-primary btn-block" value="Login" type="submit" />
                </div>

                <div class="col">
                    <input class="btn btn-secondary btn-block" value="Cancel" type="reset" />
                </div>
            </div>

            <div class="row p-3">
                <div class="col">
                    <button class="btn btn-outline-secondary btn-block">
                        <a asp-action="signup" asp-controller="user">Need an account?</a>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>