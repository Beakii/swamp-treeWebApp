<!DOCTYPE html>

<html>
<head>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://unpkg.com/popper.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" asp-action="index" asp-controller="home" ><img src="~/img/pepe.jpg" width="70" height="50"/></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">

                <li class="nav-item">
                    <a class="nav-link" asp-action="index" asp-controller="home">Testing Page</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="specials" asp-controller="shop">Home</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" asp-action="catalog" asp-controller="shop">Shop</a>
                </li>


                @if (Context.Session.GetString(SessionRef.Username) == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="login" asp-controller="user">Login</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-action="signup" asp-controller="user">Sign Up</a>
</li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-action="cart" asp-controller="shop">Cart</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-action="SessionCheck" asp-controller="user">@Context.Session.GetString(SessionRef.Username)</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-action="logout" asp-controller="user">Logout</a>
                    </li>
                }

            </ul>
        </div>
    </nav>

        <center class="container-fluid">
            @RenderBody()
        </center>
</body>
</html>
