@model IEnumerable<CartItem>
@{
    ViewBag.Title = "Cart";
}

<h1> Shopping Cart</h1>

<div class="cart">
    
    <table border="1" style="width:50%" align="center" cellpadding=5>
        <tr>
            <th class="text-center" colspan="2" width="10%">Product</th>
            <th class="text-center">Quantity</th>
            <th class="text-center">Price</th>
            <th class="text-center"></th>
        </tr>

        @if (Model != null)
        {
            @foreach (var v in Model)
            {
                <tr>
                    <td align="center">
                        <img src="~/img/trees/@{@v.Plant.Name}.jpg" style="width:100px;height:100px;" class="itemImg" />'
                    </td>
                    <td><p class=productName>@v.Plant.Name</p></td>
                    <td align="center"><p class="quantity">@v.Quantity</p></td>
                    <td align="center"><p class="price">$@v.Plant.Price</p></td>
                    <td align="center"><button id="remove">Remove</button></td>
                </tr>
            }
        }
        else
        {
            <p>EMPTY!</p>
        }




    </table>

</div>

<div class="total">


</div>

