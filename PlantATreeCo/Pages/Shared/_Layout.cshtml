<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PlantATreeCo</title>

    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vuetify/dist/vuetify.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/vuetify/dist/vuetify.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Material+Icons" rel="stylesheet">

</head>
<body>
    <div id="layout">
        <v-app dark>

            <!--Top navigation bar-->
            <v-toolbar>
                <v-toolbar-side-icon v-on:click.native="drawerToggle = !drawerToggle" class="hidden-sm-and-up"></v-toolbar-side-icon>
                <v-toolbar-title>Plant-A-Tree-Co</v-toolbar-title>
                <v-spacer></v-spacer>
                <v-toolbar-items class="hidden-xs-only">
                    <v-btn flat v-for="item in menuItems" :key="item.title" v-on:click="linkTo(item)">
                        <v-icon left>
                            {{ item.icon }}
                        </v-icon>
                        {{ item.title }}
                    </v-btn>
                </v-toolbar-items>
            </v-toolbar>

            <!--Mobile navigation drawer: only loads on mobile-->
            <v-navigation-drawer v-model="drawerToggle" absolute>
                <v-list>
                    <v-list-tile v-for="item in menuItems" :key="item.title">
                        <v-list-tile-action>
                            <v-icon>{{ item.icon }}</v-icon>
                        </v-list-tile-action>

                        <v-list-tile-content>{{ item.title }}</v-list-tile-content>

                    </v-list-tile>
                </v-list>
            </v-navigation-drawer>

            <!--Body content of the webpage-->
            <div>
                @RenderBody()
            </div>

        </v-app>
    </div>

    <script src="~/vue/navBar.js"></script>

    @RenderSection("Scripts", required: true)
</body>
</html>
